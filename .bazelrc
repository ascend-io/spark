build --workspace_status_command=build/bazel_workspace_status_command
# build --legacy_bazel_java_test # for now, until we know the best practice for this ...
build --strategy=Scalac=worker
build --worker_sandboxing
# test --test_output=errors # so we don't have to look at the file when we err
test --test_env SPARK_TESTING=1
test --test_env SPARK_SCALA_VERSION=2.12
test --test_env SPARK_HOME=.
test --spawn_strategy=local
build --disk_cache=/var/tmp/_bazel_smparkes/cache
test --disk_cache=/var/tmp/_bazel_smparkes/cache
build --jobs 4
test --jobs 4